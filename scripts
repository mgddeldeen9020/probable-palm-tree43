<div class="popup">
  <button onclick="startDownload()">Download your program</button>
  <div class="loader" id="loader"></div>
  <p id="text"></p>
</div>

<audio id="startSound" src="start.mp3"></audio>
<audio id="cancelSound" src="cancel.mp3"></audio>

<script>
function startDownload(){
  document.getElementById("loader").style.display="block";
  document.getElementById("text").innerText="Your download will start in 3...";
  document.getElementById("startSound").play();

  let count = 3;
  let timer = setInterval(()=>{
    count--;
    if(count > 0){
      document.getElementById("text").innerText =
      "Your download will start in " + count + "...";
    }else{
      clearInterval(timer);
      window.location.href = "download/app.apk";
    }
  },1000);
}
</script>

